@model CouponDTO

<form asp-action="BeforeDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete Coupon</h1>
        <input asp-for="Code" hidden/>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />                
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Expriation Date</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ExpirationDate" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a asp-controller="Coupon" asp-action="CouponIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input asp-controller="Coupon" asp-action="CouponeDelete" type="submit" value="Delete" class="btn btn-danger form-control" />
                
            </div>
        </div>
    </div>
</form>